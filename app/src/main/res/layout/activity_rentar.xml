<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rentar"
    android:orientation="vertical"  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CDCDCD" >

        // BOTON VOLVER

        <ImageButton
            android:id="@+id/ibback"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="#CDCDCD"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"/>

        // BOTON LISTA

        <ImageButton
            android:id="@+id/ibrentlist"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="280dp"
            android:background="#CDCDCD"
            android:src="@drawable/ic_baseline_format_list_bulleted_24" />

    </LinearLayout>


    // TITULO

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RENTAR LIBROS"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="45dp"
        android:textStyle="bold" />


    // IDENTIFICACIÓN RENTA

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID RENT"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etidrent"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="IDENTIFICACIÓN RENTA"
        android:textSize="16dp"
        android:paddingRight="30dp"
        android:gravity="center"
        android:inputType="number"
        android:drawableStart="@drawable/ic_baseline_credit_card_24" />


    // IDENTIFICACIÓN USUARIO

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID USER"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etiduser"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="IDENTIFICACIÓN USUARIO"
        android:textSize="16dp"
        android:paddingRight="30dp"
        android:gravity="center"
        android:inputType="number"
        android:drawableStart="@drawable/ic_baseline_person_24" />


    // IDENTIFICACIÓN LIBRO

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID BOOK"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etidbook"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="IDENTIFICACIÓN LIBRO"
        android:textSize="16dp"
        android:paddingRight="30dp"
        android:gravity="center"
        android:inputType="number"
        android:drawableStart="@drawable/ic_baseline_email_24" />


    // FECHA DE RENTA

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etrentdate"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="FECHA DE RENTA"
        android:textSize="16dp"
        android:paddingRight="30dp"
        android:gravity="center"
        android:inputType="number"
        android:drawableStart="@drawable/ic_baseline_watch_later_24" />


    // CRUD

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp">


        // CREAR RENTA

        <ImageButton
            android:id="@+id/ibaddrent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#CDCDCD"
            android:src="@drawable/ic_baseline_add_24"/>


        // ENCONTRAR RENTA

        <ImageButton
            android:id="@+id/ibfindrent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#CDCDCD"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_notes_24" />


        // EDITAR RENTA

        <ImageButton
            android:id="@+id/ibeditrent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#CDCDCD"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_edit_24" />


        // ELIMINAR RENTA

        <ImageButton
            android:id="@+id/ibdeleterent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#CDCDCD"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_delete_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="128dp"
        android:background="#CDCDCD" > </LinearLayout>

</LinearLayout>