<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Libros"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CDCDCD" >

        // BOTON VOLVER

        <ImageButton
            android:id="@+id/ibback"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="#CDCDCD"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"/>

        // BOTON LISTA

        <ImageButton
            android:id="@+id/ibbookslist"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="280dp"
            android:background="#CDCDCD"
            android:src="@drawable/ic_baseline_format_list_bulleted_24" />

    </LinearLayout>


    // TITULO

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBROS"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="45dp"
        android:textStyle="bold" />


    // IDENTIFICACION LIBRO

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID BOOK"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etidbook"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="IDENTIFICACIÃ“N"
        android:textSize="16dp"
        android:paddingRight="30dp"
        android:gravity="center"
        android:inputType="number"
        android:drawableStart="@drawable/ic_baseline_credit_card_24" />


    // NOMBRE LIBRO

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK NAME"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etbookname"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="NOMBRE COMPLETO"
        android:textSize="16dp"
        android:paddingRight="30dp"
        android:gravity="center"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/ic_baseline_person_24" />


    // COSTE DEL LIBRO

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK COST"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etbookcost"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="COSTE DEL LIBRO"
        android:textSize="16dp"
        android:paddingRight="30dp"
        android:gravity="center"
        android:inputType="number"
        android:drawableStart="@drawable/ic_baseline_email_24" />


    // LIBRO INDISPONIBLE / DISPONIBLE

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNAVALIBLE / AVALIBLE"
        android:textSize="17dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/swbookstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" />


    // CRUD

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp">


        // CREAR LIBRO

        <ImageButton
            android:id="@+id/ibaddbook"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#CDCDCD"
            android:src="@drawable/ic_baseline_bookmark_add_24"/>


        // ENCONTRAR LIBRO

        <ImageButton
            android:id="@+id/ibfindbook"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#CDCDCD"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_bookmarks_24" />


        // EDITAR LIBRO

        <ImageButton
            android:id="@+id/ibeditbook"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#CDCDCD"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_edit_24" />


        // ELIMINAR LIBRO

        <ImageButton
            android:id="@+id/ibdeletebook"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#CDCDCD"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_bookmark_remove_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="128dp"
        android:background="#CDCDCD" > </LinearLayout>

</LinearLayout>